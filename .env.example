# PSD pluggable hooks
PSD_SNAPSHOT_FN=portfolio_exporter.psd_adapter:snapshot_once
PSD_RULES_FN=portfolio_exporter.psd_rules:evaluate
# Optional: heartbeat interval for ingestor loop
PSD_HEARTBEAT_S=2.0
# SQLite WAL checkpoint tuning
PSD_WAL_AUTOCHECKPOINT=1000
PSD_CHECKPOINT_EVERY=300
CP_REFRESH_TOKEN=""  # Optional: IBKR Client Portal refresh token

# IBKR API connection (override if using Gateway ports 4001/4002)
IB_HOST=127.0.0.1
IB_PORT=7497

# Default output directory for generated reports (optional)
# If set, scripts like daily_report.py will write files here by default.
# Example: OUTPUT_DIR=./.outputs
#OUTPUT_DIR=

# Legacy override used by some scripts (e.g., net_liq_history_export)
#PE_OUTPUT_DIR=

# Quiet/CI mode: suppress pretty printing
#PE_QUIET=1

# TWS export directory for Net-Liq (dailyNetLiq.csv)
#TWS_EXPORT_DIR=~/Jts/Export
